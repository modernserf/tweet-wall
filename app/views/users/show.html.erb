<style type="text/css" media="screen">

	#container{
		position:absolute;
		padding: 100px;
		top: -180px;
		right: 100px;
		width: 800px;
		-webkit-transform: rotate(90deg);
		
	}
	
	.orange{
		color:#EF8A33;
	}

	.logo{
		height:150px;
	}

	#logotext{
		color:#0072BC;
		font-family: "Helvetica Neue", "Arial", sans-serif;
		margin-left: 180px;
		margin-top: -70px;
	}
	
	#logo_tagline{
		font-weight: bold;
		font-size: 1.5em;
	}
	
	#logo_subline{
		margin-top: 15px;
		font-size: 2em;
		margin-bottom: -5px;
	}

	.tweet_row {
		padding: 20px;
		font-size: 1.5em;
		line-height: 1.2em;
	}
	
	.icon {
		width: 75px;
	}

	.controls {
		display:none;
	}
	
	body{
		background-repeat:no-repeat;
		
	}
	

</style>
<div id="container">
	<div id="header">
		<%= image_tag "vnuze_logo.PNG", :title => "VideoNuze", :class => "logo" %>
		<div id="logotext">
			<p id="logo_tagline">ONLINE VIDEO ADVERTISING SUMMIT</p>
			<p id="logo_subline"><span class="orange">join the conversation at</span> <strong><%= @user.hashtag %></strong></p>
		</div>
	</div>
	<div id="body">
		<table><%= render @tweets %></table>		
	</div>
</div>